<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_background"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:background="@drawable/image_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Sagar"
                    android:textColor="@color/WHITE_COLOR"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/product_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sagar"
                    android:textColor="@color/WHITE_COLOR"
                    android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >


                            <TableRow
                                android:gravity="center_horizontal|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="0.33"
                                    android:paddingTop="5dp"
                                    android:gravity="center"
                                    android:paddingBottom="3dp"
                                    android:layout_marginLeft="1dp"
                                    >

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/saved_shapp_icon"/>
                                    <TextView
                                        android:id="@+id/followers_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:textSize="11sp"
                                        android:text="0"
                                        android:textColor="@color/TEXT_FIELD_BORDER"/>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="0.33"
                                    android:paddingTop="5dp"
                                    android:gravity="center"
                                    android:paddingBottom="3dp"
                                    >

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/speech"/>
                                    <TextView
                                        android:id="@+id/products_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:textSize="11sp"
                                        android:text="0"
                                        android:textColor="@color/TEXT_FIELD_BORDER"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="0.33"
                                    android:paddingTop="5dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="1dp"
                                    android:paddingBottom="3dp"
                                    >
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/eye_icon"/>
                                    <TextView
                                        android:id="@+id/members_ext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:textSize="11sp"
                                        android:text="0"
                                        android:textColor="@color/TEXT_FIELD_BORDER"/>
                                </LinearLayout>
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>

</LinearLayout>