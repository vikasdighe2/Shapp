<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/bidding_page_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/NAV_BAR_COLOR">

        <ImageView
            android:id="@+id/bidding_page_close_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_icon"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/bidding_page_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/product"
            android:layout_centerInParent="true"
            android:textColor="@color/WHITE_COLOR"/>

        <LinearLayout
            android:id="@+id/bid_button"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tick_icon"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>



    <com.eysa.shapp.CircleImageView
        android:id="@+id/bidding_pro_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/rounded_image_mask"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp" />





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/enter_bidding_amt_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:hint="0"
            android:padding="10dp"
            android:layout_marginTop="1sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Kr."
            />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TEXT_FIELD_BACKGROUND"
            android:text="@string/latest_bid"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TEXT_FIELD_BACKGROUND"
            android:text=": "/>
        <TextView
            android:id="@+id/latestbid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TEXT_FIELD_BACKGROUND"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TEXT_FIELD_BACKGROUND"
            android:text=" Kr."/>
    </LinearLayout>


</LinearLayout>