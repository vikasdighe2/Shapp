<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eysa.shapp.MainActivity"
    android:animateLayoutChanges="true"
    android:id="@+id/drawer_layout">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/fragment_place_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            >
        </FrameLayout>


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tabsTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|bottom"
            android:layout_alignParentBottom="true"
            android:background="@color/MASTER_COLOR"
            android:visibility="visible">

            <TableRow  xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <RelativeLayout
                    android:id="@+id/tabs_col_saved_shapps"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/tabs_image_saved_shapps"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/saved_shapp_icon"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/tabs_text_saved_shapps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tabs_image_saved_shapps"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/WHITE_COLOR"
                        android:text="@string/saved_shapp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tabs_col_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/tabs_image_followers"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/camera_icon"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:id="@+id/tabs_text_followers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tabs_image_followers"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/WHITE_COLOR"
                        android:text="@string/sell"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tabs_col_discover"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/tabs_image_discover"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/discover_icon"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/tabs_text_discover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tabs_image_discover"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/WHITE_COLOR"
                        android:text="@string/discover"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabs_col_groups"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/tabs_image_groups"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/bell_icon"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/tabs_text_groups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tabs_image_groups"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/WHITE_COLOR"
                        android:text="@string/notification"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/tabs_col_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/tabs_image_settings"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/groups_icon"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/tabs_text_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tabs_image_settings"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/WHITE_COLOR"
                        android:text="@string/groups"/>
                </RelativeLayout>

            </TableRow>


        </TableLayout>



    </FrameLayout>


    <FrameLayout android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#FFFFFF"/>

</android.support.v4.widget.DrawerLayout>
