<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_box_product">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/CARD_DESC_BACKGROUND">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TableRow
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/WHITE_COLOR">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.90"
                        android:padding="3dp">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/group_image"
                                android:scaleType="fitXY"
                                android:src="@drawable/blank_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/group_name_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="Group Name"
                                android:textColor="@color/tinder_page_text_color"
                                android:layout_margin="10dp" />

                            <TextView
                                android:id="@+id/group_time_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:textSize="15sp"
                                android:textColor="@color/tinder_page_text_color"
                                android:text=""
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.10"
                        android:padding="3dp">
                        <LinearLayout
                            android:gravity="center|center_vertical"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/invite_btn">
                            <ImageView
                                android:id="@+id/button_delete_group"
                                android:src="@drawable/delete_icon"
                                android:layout_width="35dp"
                                android:layout_height="35dp"/>
                        </LinearLayout>

                    </LinearLayout>


                </TableRow>
            </TableLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/CARD_DESC_BACKGROUND">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TableRow
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.33"
                        android:paddingTop="5dp"
                        android:paddingBottom="3dp">

                        <TextView
                            android:id="@+id/pro_count_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="0"
                            android:textColor="@color/tinder_page_text_color"/>

                        <TextView
                            android:id="@+id/products_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="11sp"
                            android:text="Products"
                            android:textColor="@color/tinder_page_text_color"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.33"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="1dp"
                        android:paddingBottom="3dp"
                        android:background="@color/CARD_DESC_BACKGROUND"
                        >

                        <TextView
                            android:id="@+id/mem_count_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="0"
                            android:textColor="@color/tinder_page_text_color"/>

                        <TextView
                            android:id="@+id/members_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="11sp"
                            android:text="Members"
                            android:textColor="@color/tinder_page_text_color"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.33"
                        android:paddingTop="5dp"
                        android:paddingBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:background="@color/CARD_BOTTOM_BACKGROUND"
                        >

                        <TextView
                            android:id="@+id/follow_count_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="0"
                            android:textColor="@color/WHITE_COLOR"/>

                        <TextView
                            android:id="@+id/followers_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="11sp"
                            android:text="Followers"
                            android:textColor="@color/WHITE_COLOR"/>
                    </LinearLayout>


                </TableRow>



            </TableLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>